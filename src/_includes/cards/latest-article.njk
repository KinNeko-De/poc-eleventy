<div class="card-float content-card rounded-2xl p-6 shadow-lg">
  <div class="w-12 h-12 accent-gradient rounded-xl mb-4 flex items-center justify-center">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
    </svg>
  </div>
  <h3 class="font-semibold text-gray-800 mb-3">Latest Article</h3>
  {% set latestPost = collections.blog | reverse | first %}
  {% if latestPost %}
    <div class="mb-3">
      <img src="{{ latestPost.data.featureImage }}" 
           alt="{{ latestPost.data.headline }}" 
           class="w-full h-24 object-cover rounded-lg mb-2">
    </div>
    <a href="{{ latestPost.url }}" class="block hover:text-indigo-600 transition-colors">
      <h4 class="font-medium text-gray-900 mb-1 line-clamp-2">{{ latestPost.data.headline }}</h4>
      <p class="text-sm text-gray-600 line-clamp-2">{{ latestPost.data.subline }}</p>
    </a>
    <div class="mt-2 text-xs text-gray-500">
      {{ latestPost.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) }}
    </div>
  {% else %}
    <p class="text-sm text-gray-600">No articles yet</p>
  {% endif %}
</div>
