<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <link rel="icon" href="/assets/favicon.ico" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/assets/tailwind.css" rel="stylesheet">
</head>
<body class="bg-indigo-50 min-h-screen font-['Inter']">
  <!-- Top Navigation -->
  <header class="fixed top-0 left-0 right-0 z-50 px-6 py-4 nav-backdrop">
    <div class="nav-floating rounded-2xl px-6 py-3 shadow-lg max-w-4xl mx-auto">
      <div class="flex items-center justify-between">
        <div class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
          Portfolio
        </div>
        <button id="burger" type="button" aria-label="Open menu" aria-expanded="false" class="md:hidden inline-flex text-gray-700 bg-transparent border-0 p-2 items-center justify-center rounded-lg hover:bg-gray-100">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
        <nav class="hidden md:flex space-x-8">
          <a href="/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Home</a>
          <a href="/about/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">About</a>
          <a href="/skills/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Skills</a>
          <a href="/portfolio/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Portfolio</a>
          <a href="/blog/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Blog</a>
          <a href="/contact/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Contact</a>
        </nav>
      </div>
      <nav id="mobile-menu" class="md:hidden hidden flex flex-col space-y-3 mt-4 pb-2">
        <a href="/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors block text-center">Home</a>
        <a href="/about/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors block text-center">About</a>
        <a href="/skills/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors block text-center">Skills</a>
        <a href="/portfolio/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors block text-center">Portfolio</a>
        <a href="/blog/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors block text-center">Blog</a>
        <a href="/contact/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors block text-center">Contact</a>
      </nav>
    </div>
  </header>

  <!-- Mobile menu overlay -->
  <div id="mobile-menu-overlay" class="mobile-menu-overlay"></div>

  <!-- Main Content Grid -->
  <div class="pt-24 px-6 pb-12">
    <div class="max-w-7xl mx-auto">
      <div class="grid-asymmetric">
        <!-- Left Sidebar -->
        <aside class="space-y-6">
          {% set leftSidebarCards = sidebar.leftCards or ['quick-stats', 'latest-article'] %}
          {% for cardName in leftSidebarCards %}
            {% include "cards/" + cardName + ".njk" %}
          {% endfor %}
        </aside>

        <!-- Main Content -->
        <main class="content-card rounded-3xl p-8 shadow-xl">
          <div class="prose prose-lg max-w-none">
            {{ content | safe }}
          </div>
        </main>

        <!-- Right Sidebar -->
        <aside class="space-y-6">
          {% set rightSidebarCards = sidebar.rightCards or ['get-in-touch', 'skills'] %}
          {% for cardName in rightSidebarCards %}
            {% include "cards/" + cardName + ".njk" %}
          {% endfor %}
        </aside>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-center py-8 text-gray-500 bg-white/50 backdrop-blur-sm">
    <div class="max-w-4xl mx-auto px-6">
      <div class="h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent mb-6"></div>
      <p>&copy; 2025 Freelancer Portfolio. Crafted with modern web technologies.</p>
    </div>
  </footer>

  <script>
    // Enhanced burger menu with smooth animations and overlay
    (function() {
      const burger = document.getElementById('burger');
      const mobileMenu = document.getElementById('mobile-menu');
      const overlay = document.getElementById('mobile-menu-overlay');
      if (!burger || !mobileMenu || !overlay) return;
      
      function toggleMobileMenu() {
        const isHidden = mobileMenu.classList.toggle('hidden');
        burger.setAttribute('aria-expanded', String(!isHidden));
        
        // Toggle overlay
        if (!isHidden) {
          overlay.classList.add('active');
        } else {
          overlay.classList.remove('active');
        }
        
        // Add smooth transition for menu
        if (!isHidden) {
          mobileMenu.style.opacity = '0';
          mobileMenu.style.transform = 'translateY(-10px)';
          setTimeout(() => {
            mobileMenu.style.transition = 'all 0.3s ease';
            mobileMenu.style.opacity = '1';
            mobileMenu.style.transform = 'translateY(0)';
          }, 10);
        }
      }
      
      // Burger button click
      burger.addEventListener('click', toggleMobileMenu);
      
      // Overlay click to close menu
      overlay.addEventListener('click', () => {
        if (!mobileMenu.classList.contains('hidden')) {
          toggleMobileMenu();
        }
      });
      
      // Add scroll effect to adjust navigation padding
      const header = document.querySelector('header');
      
      window.addEventListener('scroll', () => {
        const scrollY = window.scrollY;
        
        if (scrollY > 50) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }
      });
    })();
  </script>
</body>
</html>
