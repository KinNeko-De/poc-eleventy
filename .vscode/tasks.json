{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Tailwind CSS",
      "type": "shell",
  "command": "npx @tailwindcss/cli -i src/styles.css -o _site/assets/tailwind.css --content \"./src/**/*.{njk,md,html,js}\"",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Eleventy Dev Server",
      "type": "shell",
      "command": "npx eleventy --serve",
      "group": "build",
      "dependsOn": "Build Tailwind CSS",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
